generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum AGE {
  PUPPY
  ADULT
  ELDERLY
}

model Pet {
  id           String   @id @default(uuid())
  isAvailable  Boolean  @default(true)
  name         String
  description  String
  age          AGE
  size         String
  energy       String
  independency String
  // environment        String
  images       String[]
  requirements String[]

  org   Organization @relation(fields: [orgId], references: [id])
  orgId String

  @@map("pets")
}

model Organization {
  id            String @id @default(uuid())
  name          String
  email         String @unique
  telephone     String @unique
  password_hash String
  street        String
  neighborhood  String
  city          String
  zip_code      String

  pet Pet[]

  @@map("organizations")
}
